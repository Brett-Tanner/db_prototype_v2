<%= form_with model: @event, data: { controller: :fields }, html: { class: 'd-grid justify-content-center gap-3 card needs-validation w-50', novalidate: true } do |f| %>

    <% if @event.errors.any? %>
        <div class="errors">
            <h3><%= t('.unable_to_save', event: @event.name) %></h3>
            <ul>
                <% @event.errors.full_messages.each do |error| %>
                    <li><%= error %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="d-grid gap-3">
        <div class="form-floating">
            <%= f.text_field :name, class: 'form-control', placeholder: t('.name'), required: true %>
            <%= f.label :name, t('.name'), class: 'form-label' %><br />
        </div>

        <div class="form-floating">
            <%= f.text_area :description, class: 'form-control', placeholder: t('.description'), required: true  %>
            <%= f.label :description, t('.description'), class: 'form-label' %><br />
        </div>

        <div class="form-floating">
            <%= f.date_field :start_date, class: 'form-control', placeholder: t('.start_date'), required: true  %>
            <%= f.label :start_date, t('.start_date'), class: 'form-label' %><br />
        </div>

        <div class="form-floating">
            <%= f.date_field :end_date, class: 'form-control', placeholder: t('.end_date'), required: true  %>
            <%= f.label :end_date, t('.end_date'), class: 'form-label' %><br />
        </div>

        <%# TODO: add an option to create for all schools here, and in controller %>
        <div>
            <%= f.label :school_id, t('.school'), class: 'form-label' %><br />
            <%= f.select :school_id, [%w[All Schools, all]] + School.order(:name).map { |school| [school.name, school.id]}, {}, { class: 'form-select', required: true } %>
        </div>

        <div>
            <%= f.label :member_prices_id, t('.member_prices'), class: 'form-label' %><br />
            <%= f.collection_select :member_prices_id, PriceList.order(:name), :id, :name, {}, { class: 'form-select', required: true } %>
        </div>

        <div>
            <%= f.label :non_member_prices_id, t('.non_member_prices'), class: 'form-label' %><br />
            <%= f.collection_select :non_member_prices_id, PriceList.order(:name), :id, :name, {}, { class: 'form-select', required: true } %>
        </div>
    </div>

    <div class="d-grid gap-3">
        <template data-fields-target="template">
            <%= f.fields_for :time_slots, TimeSlot.new(event_id: @event.id), child_index: 'CHILD' do |slot_f| %>
                <%= render 'events/slot_fields', f: slot_f %>
            <% end %>
        </template>
        
        <%= f.fields_for :time_slots do |slot_f| %>
            <%= render 'events/slot_fields', f: slot_f %>
        <% end %>
        
        <div data-fields-target="target"></div>
    </div>

    <div class="d-flex justify-content-center align-items-center gap-3">
        <%= button_tag t('.add_time_slot'), data: { action: "fields#add" }, class: 'btn btn-primary' %>
        <%= f.submit class: 'btn btn-primary' %>
    </div>
<% end %>