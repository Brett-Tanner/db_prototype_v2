<%= form_with model: @event, data: { controller: :fields }, html: { class: 'd-grid gap-3 card needs-validation w-50', novalidate: true } do |f| %>

    <% if @event.errors.any? %>
        <div class="errors">
            <h3><%= t('.unable_to_save', event: @event.name) %></h3>
            <ul>
                <% @event.errors.full_messages.each do |error| %>
                    <li><%= error %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="d-grid gap-3">
        <h3>Event Fields</h3>

        <div class="form-floating">
            <%= f.text_field :name, class: 'form-control', placeholder: t('.name'), required: true %>
            <%= f.label :name, t('.name'), class: 'form-label' %>
        </div>

        <div>
            <%= label_tag :image_id, t('.image'), class: 'form-label' %>
            <%= f.select :image_id, @images, {}, { class: 'form-select' } %>
        </div>

        <div class="form-floating">
            <%= f.date_field :start_date, class: 'form-control', placeholder: t('.start_date'), required: true  %>
            <%= f.label :start_date, t('.start_date'), class: 'form-label' %>
        </div>

        <div class="form-floating">
            <%= f.date_field :end_date, class: 'form-control', placeholder: t('.end_date'), required: true  %>
            <%= f.label :end_date, t('.end_date'), class: 'form-label' %>
        </div>

        <div>
            <%= f.label :school_id, t('.school'), class: 'form-label' %>
            <%= f.select :school_id, @schools, {}, { class: 'form-select' } %>
        </div>

        <div class="form-floating">
            <%= f.number_field :goal, class: 'form-control', placeholder: t('.goal'), required: true %>
            <%= f.label :goal, t('.goal'), class: 'form-label' %>
        </div>

        <div>
            <%= f.label :member_prices_id, t('.member_prices'), class: 'form-label' %>
            <%= f.collection_select :member_prices_id, @prices, :id, :name, {}, { class: 'form-select' } %>
        </div>

        <div>
            <%= f.label :non_member_prices_id, t('.non_member_prices'), class: 'form-label' %>
            <%= f.collection_select :non_member_prices_id, @prices, :id, :name, {}, { class: 'form-select' } %>
        </div>
    </div>

    <div class="d-grid gap-3">
        <h3>Event Option Fields</h3>

        <%= f.fields_for :options do |opt_f| %>
            <%= render 'options/opt_fields', f: opt_f %>
        <% end %>

        <template data-fields-target="template">
            <%= f.fields_for :options, Option.new(optionable_id: @event.id, optionable_type: 'Event', category: :event), child_index: 'CHILD' do |opt_f| %>
                <%= render 'options/opt_fields', f: opt_f %>
            <% end %>
        </template>

        <div data-fields-target="target" class="d-none w-100"></div>

    </div>

    <%= button_tag 'Add Event Option', type: 'button', data: { action: "fields#add" }, class: 'btn btn-info' %>
    <%= f.submit class: 'btn btn-primary' %>
<% end %>