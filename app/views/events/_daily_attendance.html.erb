<h4 class="w-100"><%= link_to event.name, children_path(source: 'Event', id: event.id) %></h4>

<% event.time_slots.morning.each do |slot| %>
    <% regs = slot.registrations.size %>

    <div style="height:140px;" class="card <%= case
                         when regs < 10
                             'bg-danger'
                         when regs < 20 
                             'bg-info'
                         else
                             'bg-success'
                         end %> justify-content-between">
        <h6 class="bg-light rounded-3 p-2">
            <%= link_to "#{slot.name} (#{slot.date})", children_path(source: 'TimeSlot', id: slot.id), class: 'text-break' %>
        </h6>
        <h3>
            <%= regs %>
        </h3>
    </div>
<% end %>

<%= button_tag t('.print'), class: 'btn btn-primary w-100 print', data: { action: "click->print#print" } %>