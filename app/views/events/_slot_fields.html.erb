<div class="fields_wrapper" data-new-record="<%= f.object.new_record? %>">
    <%= f.hidden_field :event_id %>

    <h2><%= t('.slot_info') %></h2>

    <div class="field">
        <%= f.label :image, t('.event_image'), class: 'form-label' %><br />
        <%= f.file_field :image, class: 'form-control' %>
    </div>

    <div class="field">
        <%= f.label :name, t('.name') %><br />
        <%= f.text_field :name %>
    </div>

    <div class="field">
        <%= f.label :start_time, t('.start_time') %><br />
        <%= f.datetime_field :start_time %>
    </div>
        
    <div class="field">
        <%= f.label :end_time, t('.end_time') %><br />
        <%= f.datetime_field :end_time %>
    </div>
        
    <div class="field">
        <%= f.label :description, t('.description') %><br />
        <%= f.text_area :description %>
    </div>

    <div class="field">
        <%= f.label :category, t('.category') %><br />
        <%= f.select :category, [%w[Seasonal seasonal], %w[Special special], %w[Party party]] %>
    </div>

    <div class="field">
        <%= f.label :morning, t('.morning') %><br />
        <%= f.check_box :morning %>
    </div>

    <% unless f.object.new_record? %>
        <div class="field">
            <%= f.label :_destroy, t('.destroy') %><br />
            <%= f.check_box :_destroy %>
        </div>
    <% end %>

    <%= button_tag t('.remove_slot'), data: { action: "fields#remove" }, class: 'btn btn-primary' if f.object.new_record? %>
</div>