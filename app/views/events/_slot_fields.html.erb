<div class="fields_wrapper" data-new-record="<%= f.object.new_record? %>">
    <%= f.hidden_field :event_id %>

    <h2><%= t('.slot_info') %></h2>

    <div class="field">
        <%= f.label :name, t('.name') %><br />
        <%= f.text_field :name %>
    </div>

    <div class="field">
        <%= f.label :start_time, t('.start_time') %><br />
        <%= f.datetime_field :start_time %>
    </div>
        
    <div class="field">
        <%= f.label :end_time, t('.end_time') %><br />
        <%= f.datetime_field :end_time %>
    </div>
        
    <div class="field">
        <%= f.label :description, t('.description') %><br />
        <%= f.text_area :description %>
    </div>

    <div class="field">
        <%= f.label :max_attendees, t('.max_attendees') %><br />
        <%= f.number_field :max_attendees %>
    </div>

    <div class="field">
        <%= f.label :registration_deadline, t('.registration_deadline') %><br />
        <%= f.date_field :registration_deadline %>
    </div>

    <% unless f.object.new_record? %>
        <div class="field">
            <%= f.label :_destroy, t('.destroy') %><br />
            <%= f.check_box :_destroy %>
        </div>
    <% end %>

    <%= button_tag t('.remove_slot'), data: { action: "fields#remove" }, class: 'button' if f.object.new_record? %>
</div>