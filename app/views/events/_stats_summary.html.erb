<% event_ids = events.map(&:id) %>
<% children = events.all.reduce([]) { |array, event| array + event.children.includes(:real_invoices) } %>
<% photo_ids = Option.all.where(optionable_id: event_ids, optionable_type: 'Event')%>
<% photo_regs = Registration.all.where(registerable_id: photo_ids, registerable_type: 'Option').count %>

<% int_kids = children.select { |c| c.category == 'internal' } %>
<% int_revenue = int_kids.reduce(0) { |sum, c| sum + c.real_invoices.reduce(0) { |cost, i| cost + i.total_cost} } %>

<% res_kids = children.select { |c| c.category == 'reservation' } %>
<% res_revenue = res_kids.reduce(0) { |sum, c| sum + c.real_invoices.reduce(0) { |cost, i| cost + i.total_cost} } %>

<% ext_kids = children.select { |c| c.category == 'external' } %>
<% ext_revenue = ext_kids.reduce(0) { |sum, c| sum + c.real_invoices.reduce(0) { |cost, i| cost + i.total_cost} } %>

<% total_revenue = int_revenue + res_revenue + ext_revenue %>
<% area_goal = events.reduce(0) { |sum, e| sum + e.goal  } %>
<% goal_percent = (total_revenue / area_goal.to_f * 100).truncate %>

<div class="table-responsive-lg">
    <table class="table">
        <thead>
            <tr class="table-primary">
                <th colspan="4" scope="col"><%= t('.attendance') %></th>
                <th colspan="4" scope="col"><%= t('.revenue') %></th>
                <th colspan="2" scope="col"><%= t('.goal') %></th>
            </tr>
            <tr class="table-secondary">
                <th scope="col"><%= t('.int_kids') %></th>
                <th scope="col"><%= t('.res_kids') %></th>
                <th scope="col"><%= t('.ext_kids') %></th>
                <th scope="col"><%= t('.total_kids') %></th>
                <th scope="col"><%= t('.int_res_revenue') %></th>
                <th scope="col"><%= t('.external_revenue') %></th>
                <th scope="col"><%= t('.total_revenue') %></th>
                <th scope="col"><%= t('.goal_revenue') %></th>
                <th scope="col"><%= t('.goal_percent') %></th>
            </tr>
        </thead>
    
        <tbody>
            <tr>
                <td><%= int_kids.size %></td>
                <td><%= res_kids.size %></td>
                <td><%= ext_kids.size %></td>
                <td><%= children.size %></td>
                <td><%= number_to_currency(int_revenue + res_revenue, unit: '円', precision: 0, locale: :ja) %></td>
                <td><%= number_to_currency(ext_revenue, unit: '円', precision: 0, locale: :ja) %></td>
                <td><%= number_to_currency(total_revenue, unit: '円', precision: 0, locale: :ja) %></td>
                <td><%= number_to_currency(area_goal, unit: '円', precision: 0, locale: :ja) %></td>
                <td class=<%=
                    case goal_percent
                    when (100..)
                        'table-success'
                    when (50..99)
                        'table-warning'
                    else
                        'table-danger'
                    end
                %>>
                    <%= "#{goal_percent}%" %>
                </td>
            </tr>
            <tr>
                <th colspan="3" scope="row"><%= t('.photo_sales') %></th>
                <td><%= photo_regs %></td>
            </tr>
        </tbody>
    </table>
</div>