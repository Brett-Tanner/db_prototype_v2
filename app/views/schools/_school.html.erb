<div class="card">
    <h3><%= school.name %></h3>
    <p><%= "Address: #{school.address}" %></p>
    <p><%= "Phone: #{school.phone}" %></p>

    <p><%= "Managed by: #{school.managers.pluck(:name).join(", ")}" %></p>
    
    <% if school.details %>
        <% school.details.each do |k, v| %>
            <p><%= "#{k.tr('_', ' ').humanize}: #{v.join(', ')}" %></p>
        <% end %>
    <% end %>

    <%= link_to 'Edit School',
                edit_school_path(school),
                class: 'btn btn-primary' %>
</div>
