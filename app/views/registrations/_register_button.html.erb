<%= turbo_frame_tag "child#{child.id}_#{registerable.class.name}#{registerable.id}_mini" do %>
    <%= form_with model: Registration.new do |f| %>
        <%= f.hidden_field :cost, value: registerable.cost %>
        <%= f.hidden_field :child_id, value: child.id %>
        <%= f.hidden_field :registerable_id, value: registerable.id %>
        <%= f.hidden_field :registerable_type, value: registerable.class.name %>
        <%= f.submit t('.register'), class: 'button register' %>
    <% end %>
<% end %>