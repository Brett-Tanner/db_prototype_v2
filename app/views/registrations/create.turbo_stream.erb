<%# Variables %>
<% child = @registration.child %>
<% event = @registration.event %>
<% event_slots = event.time_slots %>

<%# Update flash message %>
<%= turbo_stream.update "flash", partial: "shared/flash" %>



<%# For User#show %>
<%# Update slot registration if changed %>
<% if @registration.slot_registration? %>
    <%= turbo_stream.replace "child#{@registration.child_id}_slot#{@registration.registerable_id}", @registration %>

    <%# Update attendance count for _event %>
    <%= turbo_stream.update "event#{@registration.event.id}reg_count" do %>
        <%= link_to t('.reg_count', num_kids: event.children.distinct.size), children_path(source: 'Event', id: event.id) %>
    <% end %>

    <%# Update attendance count for _time_slot %>
    <%= turbo_stream.update "slot#{@registration.registerable_id}reg_count" do %>
        <%= link_to t('.reg_count', num_kids: @registration.registerable.children.distinct.size), children_path(source: 'TimeSlot', id: @registration.registerable_id) %>
    <% end %>
<% end %>

<%# Update option registration if changed %>
<%= turbo_stream.replace "child#{@registration.child_id}_opt#{@registration.registerable_id}", partial: "options/option", locals: { child: @registration.child, option: @registration.registerable, paid: false } unless @registration.slot_registration? %>



<%# For Child#index %>
<%# Update event_child partial if their registration changes %>
<%= turbo_stream.replace "event_child#{@registration.child_id}", partial: 'children/event_child', locals: { event_child: @registration.child, event_child_iteration: 'Changed', event: @registration.event } %>

<%# Update slot_child partial if their registration changes %>
<% unless @registration.slot_registration? %>
    <%= turbo_stream.replace "slot_child#{@registration.child_id}", partial: 'children/slot_child', locals: { slot_child: @registration.child, slot_child_iteration: 'Changed', slot: @registration.registerable.time_slot } %>
<% end %>

<%# Add child to attending list if previously not attending %>
<% if child.registrations.where(registerable: event_slots).size == 1 %>
    <%= turbo_stream.remove "child#{child.id}" %>
    <%= turbo_stream.append "attending#{event.id}", partial: 'children/event_child', locals: { event: event, event_child: child, event_child_iteration: 'Changed' } %>
<% end %>