<div class="user_partial">
    <div class="key_info">
        <h2><%= link_to user.ja_name, user_path(user) %></h2>        
        <h4><%= t(".roles.#{user.role}") unless user.customer? %></h4>
    </div>

    <% if user.customer? %>
        <div class="children">
            <h4><%= t(".children") if user.children.size > 1 %></h4>
            <h4><%= t(".child") if user.children.size == 1 %></h4>

            <ul>
            <% user.children.each do |child| %>
                <li><%= link_to child.ja_name, child_path(child) %></li>
            <% end %>             
            </ul>

        </div>
    <% end %>

    <% if user.customer? || current_user.admin? %>
        <div class="user_options">
            <%= link_to t(".edit"), edit_user_path(user) %>
            <%= link_to t('.delete'), user_path(user), data: {turbo_method: :delete, turbo_confirm: t('.delete_confirm')} %>
        </div>
    <% end %>
</div>