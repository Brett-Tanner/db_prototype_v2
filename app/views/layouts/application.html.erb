<!DOCTYPE html>
<html>
  <head>
    <title>Kids UPシーズナルスクール申込フォーム</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <%= favicon_link_tag asset_path('favicon.svg') %>

    <%= yield :head %>
  </head>

  <body>
    <turbo-frame id="flash">
      <%= render 'shared/flash' %>
    </turbo-frame>

    <% if user_signed_in? %>
      <nav class="navbar navbar-expand-lg bg-secondary sticky-top">
        <div class="container-fluid">
          <a href="<%= user_path(current_user) %>" class="navbar-brand">
            <%= image_tag('white_logo.svg', alt: 'Logo', height: '60') %>
          </a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navContent" aria-controls="navContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navContent">
            <div class="navbar-nav flex-grow-1 justify-content-evenly gap-3">
              <% unless current_user.customer? %>
                <%= link_to t('nav_bar.children'), children_path, class: 'nav-link' %>
                
                <%= link_to ( current_user.admin? ? t('nav_bar.users') : t('nav_bar.customers')), users_path, class: 'nav-link' %>

                <%= link_to t('nav_bar.time_slots'), time_slots_path, class: 'nav-link' %>
              <% end %>
              
              <%= link_to t('nav_bar.events'), events_path, class: 'nav-link' %>
              <%= link_to 'Stats',
                          charts_path,
                          class: 'nav-link' if current_user.admin? || current_user.area_manager? %>
              <%= link_to 'Stats', 
                          chart_path(current_user.managed_schools.first.id),
                          class: 'nav-link' if current_user.school_manager? %>
              <%= link_to t('nav_bar.logout'), destroy_user_session_path, data: { turbo_method: :delete }, class: 'nav-link' %>
            </div>
          </div>
        </div>
      </nav>
    <% end %>
    
    <%= yield %>
  </body>
</html>
