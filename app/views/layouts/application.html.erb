<!DOCTYPE html>
<html>
  <head>
    <title>Event Database Prototype</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <% if user_signed_in? %>
      <div id="nav_bar">
        <%= link_to "", root_path %>

        <% unless current_user.customer? %>
          <%= link_to t("nav_bar.children") %>
          <%= link_to t("nav_bar.customers"), users_path %>
          
          <% unless current_user.school_manager? %>
            <%= link_to t("nav_bar.schools") %>
          <% end %>
        <% end %>

        <%= link_to t("nav_bar.logout"), destroy_user_session_path, data: {turbo_method: :delete} %>
        <%= link_to t("nav_bar.profile"), user_path(current_user) %>
      </div>
    <% end %>

    <% flash.each do |type, msg| %>
      <div class=<%= type %>>
        <%= msg %>
      </div>
    <% end %>
    
    <%= yield %>
  </body>
</html>
