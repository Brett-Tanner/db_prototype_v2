<main id="login">
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'needs-validation d-grid gap-3 p-3' }) do |f| %>
    <h2><%= t('.login') %></h2>

    <div class="form-floating">
      <%= f.email_field :email, class: 'form-control bs-info',
                            'aria-describedby': 'emailHelp', 
                            autofocus: true, 
                            autocomplete: "email", 
                            placeholder: t('.email'),
                            required: true %>
      <%= f.label :email, class: 'form-label' %><br />
    </div>
  
    <div class="form-floating">
      <%= f.password_field :password, class: 'form-control',
                                      autocomplete: "current-password",
                                      placeholder: t('.password'),
                                      required: true,
                                      'aria-labelledby': 'reset-pass' %>
      <%= f.label :password, class: 'form-label' %>
      <div class=" form-text" id="reset-pass"><%= link_to t('.forgot_password'), new_password_path(resource_name) %></div>
    </div>
  
    <% if devise_mapping.rememberable? %>
      <div class="form-check">
        <%= f.check_box :remember_me, class: 'form-check-input' %>
        <%= f.label :remember_me, class: 'form-check-label' %>
      </div>
    <% end %>

    <div class="d-grid gap-3">
      <%= f.submit t('.login'), class: 'btn btn-primary' %>
      <%= link_to t('.sign_up'), '/auth/sign_up', class: 'btn btn-secondary' %>
    </div>
  <% end %>
</main>
