<main id="password_new">
  <div class="card">
    <h2>Forgot your password?</h2>
  
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'd-grid align-items-center justify-content-center gap-3 p-3 w-100' }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
  
      <div class="form-floating">
        <%= f.email_field :email, class: 'form-control',
                          autofocus: true, autocomplete: "email",
                          placeholder: t('.email'),
                          required: true %>
        <%= f.label :email, t('.email'), class: 'form-label' %><br />
      </div>
  
      <div class="actions">
        <%= f.submit "Send me reset password instructions", class: 'btn btn-primary' %>
      </div>
    <% end %>
  
    <div class="d-grid gap-3">
      <%= link_to t('.log_in'), new_session_path(resource_name), class: 'btn btn-secondary' %>
      <%= link_to t('.sign_up'), '/auth/sign_up', class: 'btn btn-secondary' %>
    </div>
  </div>
</main>
