<div class="child">
    <p class="ssid"><%= link_to child.ssid, child_path(child) %></p>
    <p class="name"><%= link_to child.name, child_path(child) %></p>
    <p class="katakana"><%= link_to child.katakana_name, child_path(child) %></p>
    <p class="en"><%= link_to child.en_name, child_path(child) %></p>
    <p class="category"><%= child.category %></p>
    <p class="allergies"><%= child.allergies %></p>
    <% if child.received_hat %>
        <p class="hat">✓</p>
    <% else %>
        <p class="hat">✖</p>
    <% end %>
    <p class="parent"><%= link_to child.parent.name, user_path(child.parent)  unless child.parent.nil? %></p>
    <p class="school"><%= link_to child.school.name, school_path(child.school) unless child.school.nil? %></p>
    <p class="edit"><%= link_to t('.edit'), edit_child_path(child), class: 'button' %></p>
</div>