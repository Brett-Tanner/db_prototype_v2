<main id="event_children_index">
    <div class="event_child header">
        <div class="child_info header">
            <p class="order"><%= t('.order') %></p>
            <p class="name"><%= t('.name') %></p>
            <p class="en"><%= t('.en') %></p>
        </div>
        <% @source.time_slots.each do |slot| %>
            <div class="slot">
                <p class="slot_name"><%= link_to slot.name, time_slot_path(slot) %></p>
                <div class="attendance">
                    <p class="morning"><%= t('.morning') %></p>
                    <p class="afternoon"><%= t('.afternoon') %></p>
                </div>
            </div>
        <% end %>
    </div>

    <div id="event_children">
        <h3><%= t('.attending') %></h3>
        <%= turbo_frame_tag "attending#{@source.id}" do %>
            <%= render partial: 'event_child', collection: @attending, locals: { event: @source } || t('.no_reg') %>
        <% end %>

        <h3><%= t('not_attending') %></h3>
        <%= turbo_frame_tag "not_attending#{@source.id}" do %>       
            <%= render partial: 'event_child', collection: @not_attending, locals: { event: @source } || t('.all_reg') %>
        <% end %>
    </div>
</main>