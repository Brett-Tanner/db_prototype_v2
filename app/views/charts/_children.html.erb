<div class="w-100 d-flex">
    <%= pie_chart @data[:children].group(:grade).count,
                  title: 'Attendees by Grade',
                  height: '50dvh' %>
    <%= pie_chart @data[:children].group(:category).count,
                  title: 'Attendees by Category',
                  height: '50dvh' %>
</div>

<h1>VIPs</h1>

<% vips = @data[:children].reduce([]) do |arr, c|
                    cost = c.real_invoices.reduce(0) { |sum, i| sum + i.total_cost }
                    arr << [c, cost]
                    arr
                end
                .sort_by! { |c| c[1] }
                .reverse
                .first(10)
                .to_h { |s| [s[0].name, { 
                            en_name: s[0].en_name,
                            id: s[0].id,
                            registrations: s[0].real_invoices.reduce(0) { |sum, i| sum + i.slot_regs_count },
                            total_cost: s[1]
                            }] } %>
    
<table class="table table-striped table-hover text-center">
    <thead class="table-primary">
        <tr>
            <th>Name</th>
            <th>En Name</th>
            <th>Registrations</th>
            <th>Total Spent</th>
        </tr>
    </thead>
        
    <tbody>
        <% vips.each do |name, data| %>
            <tr>
                <td><%= link_to name, child_path(data[:id]) %></td>
                <td><%= link_to data[:en_name], child_path(data[:id]) %></td>
                <td><%= link_to data[:registrations],
                                invoices_path(child: data[:id]) %></td>
                <td><%= number_to_currency(data[:total_cost],
                                           unit: 'å††',
                                           precision: 0,
                                           locale: :ja) %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<% unless @nav[:school].id.zero? %>
    <h1>Hat Kids</h1>

    <table class="table table-striped table-hover text-center">
