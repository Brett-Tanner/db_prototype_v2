<% if current_user.admin? || current_user.area_manager? %>
    <h1>Select school:</h1>

    <nav class="d-flex flex-row flex-wrap justify-content-center gap-3">
        <%= link_to (current_user.admin? ? "All Schools" : "Area Schools"),
        charts_path,
        class: "card #{' bg-primary text-white fw-semibold' if @nav[:school].id == 0}" %>
        <% @nav[:schools].each do |s| %>
            <%= link_to s.name,
                        chart_path(id: s.id,
                                   category: @nav[:category],
                                   event: @nav[:event]),
                        class: "card #{' bg-primary text-white fw-semibold' if @nav[:school].id == s.id}"  %>
        <% end %>
    </nav>
<% end %>

<h1>Select event:</h1>
<nav class="d-flex flex-row flex-wrap justify-content-center gap-3">
    <% @nav[:events].each do |e| %>
        <% if @nav[:school].id.zero? %>
            <%= link_to e,
                charts_path(category: @nav[:category], event: e),
                class: "card #{' bg-primary text-white fw-semibold' if e == @nav[:event]}" %>
        <% else %>
            <%= link_to e,
                chart_path(id: @nav[:school].id, category: @nav[:category], event: e),
                class: "card #{' bg-primary text-white fw-semibold' if e == @nav[:event]}" %>
        <% end %>
    <% end %>
</nav>

<h1>Select category:</h1>
<nav class="d-flex flex-row flex-wrap justify-content-center gap-3">
    <% @nav[:categories].each do |c| %>
        <% if @nav[:school].id.zero? %>
          <%= link_to c.capitalize,
              charts_path(category: c, event: @nav[:event]),
              class: "card #{' bg-primary text-white fw-semibold' if c == @nav[:category]}" %>
        <% else %>
          <%= link_to c.capitalize,
              chart_path(id: @nav[:school].id, category: c, event: @nav[:event]),
              class: "card #{' bg-primary text-white fw-semibold' if c == @nav[:category]}" %>
        <% end %>
    <% end %>
</nav>