<div class="time_slot">
            <p class="date"><%= add_slot.date %></p>
            <div class="morning">
                <%= link_to image_tag(url_for(add_slot.image)), time_slot_path(add_slot) %>
                <div class="add_reg title">
                    <h4><%= add_slot.name %></h4>
                    <%# TODO: This will add a registration to the invoice form for the morning slot %>
                    <%= button_tag t('register'), class: 'button' %>
                </div>
                <% add_slot.options.each do |opt| %>
                    <div class="add_reg">
                        <p><%= opt.name %></p>
                        <%# TODO: This will add a registration to the invoice form for the option %>
                        <%= button_tag '✖', class: 'button' %>
                    </div>
                <% end %>
            </div>
            <div class="afternoon">
                <% afternoon_slot = add_slot.afternoon_slot %>
                <div class="add_reg title">
                    <h4><%= t('.afternoon_options') %></h4>
                    <%# TODO: This will add a registration to the invoice form for the afternoon slot %>
                    <%= button_tag t('.register'), class: 'button' %>
                </div>
                <% afternoon_slot.options.each do |opt| %>
                    <div class="add_reg">
                        <p><%= opt.name %></p>
                        <%# TODO: This will add a registration to the invoice form for the option %>
                        <%= button_tag '✖', class: 'button' %>
                    </div>
                <% end %>
            </div>
        </div>