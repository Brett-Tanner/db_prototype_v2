<%= form_with model: @slot, html: { class: 'card' } do |f| %>
    <div class="form-floating">
        <%= f.text_field :name, class: 'form-control', placeholder: t('.name') %>
        <%= f.label :name, t('.name'), class: 'form-label' %>
    </div>

    <div class="field">
        <%= f.label :image, t('.slot_image'), class: 'form-label' %><br />
        <%= f.file_field :image, class: 'form-control' %>
    </div>

    <div>
        <%= f.time_field :start_time, class: 'form-control' %>
        <%= f.label :start_time, t('.start_time'), class: 'form-label' %>
    </div>

    <div>
        <%= f.time_field :end_time, class: 'form-control' %>
        <%= f.label :end_time, t('.end_time'), class: 'form-label' %>
    </div>

    <div class="form-floating">
        <%= f.text_area :description, class: 'form-control', placeholder: t('.description') %>
        <%= f.label :description, t('.description'), class: 'form-label' %>
    </div>

    <div>
        <%= f.label :category, t('.category'), class: 'form-label' %>
        <%= f.select :category, [
                [t('.seasonal'), 'seasonal'],
                [t('.special'), 'special'],
                [t('.party'), 'party'],
            ], class: 'form-select' %>
    </div>

    <div class="form-check">
        <%= f.check_box :closed, class: 'form-check-input' %>
        <%= f.label :closed, t('.closed'), class: 'form-check-label' %>
    </div>

    <div class="form-check">
        <%= f.check_box :morning, class: 'form-check-input' %>
        <%= f.label :morning, t('.morning'), class: 'form-check-label' %>
    </div>

    <%= f.submit class: 'btn btn-primary' %>
<% end %>