<%= form_with model: @area, html: { class: 'card' } do |f| %>
    <div class="form-floating">
        <%= f.text_field :name, class: 'form-control',
                                placeholder:  "Name",
                                required: true %>
        <%= f.label :name, "Name", class: 'form-label' %>
    </div>

    <%= f.submit class: 'btn btn-primary' %>
<% end %>