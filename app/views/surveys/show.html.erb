<main id="survey_show">
    <%= link_to t('.survey_list'),
                surveys_path,
                class: 'btn btn-primary align-self-start' %>

    <% if current_user.admin? || current_user.area_manager? %>
        <nav class="d-flex flex-row flex-wrap justify-content-center gap-3">
            <% @schools.each do |school| %>
                <%= link_to survey_path(id: @survey.id, school: school.id) do %>
                    <div class="card<%= ' bg-primary text-white fw-semibold' if school.id == @school.id %>">
                        <%= "#{school.name}: #{school.survey_responses.count}" %>
                    </div>
                <% end %>
            <% end %>
        </nav>
    <% end %>


    <%= render @survey %>

    <h3><%= t('.responses') %></h3>

    <div class="card">
        <%= render 'survey_responses/survey_response_table',
                    survey: @survey,
                    responses: @responses %>
    </div>
</main>