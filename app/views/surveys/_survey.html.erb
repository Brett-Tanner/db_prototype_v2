<div class="card w-100 align-items-center">
    <div class="card text-white <%= survey.active ? 'bg-success' : 'bg-danger' %>">
        <h2><%= survey.name %></h2>
        <h5><%= "Active: #{survey.active ? 'â—¯' : 'ðŸ—™'}" %></h5>
    </div>
    <h3>Questions:</h3>
    <div class="d-flex flex-wrap gap-5 justify-content-center">
        <% survey.questions.each do |q| %>
            <div class="d-flex flex-column">
                <h4><%= q['text'] %></h4>
                <p><%= q['input_type'] %></p>
                <p><%= q['options'] if q['options'] %></p>
            </div>
        <% end %>
    </div>
    <h3>Criteria</h3>
    <div class="d-flex flex-wrap gap-5 justify-content-center">
        <% survey.criteria.each do |k, v| %>
            <% next if v.empty? %>

            <p><%= "#{k}: #{v}" %></p>
        <% end %>
    </div>
    <div class="d-flex gap-3">
        <%= link_to 'Edit',
                    edit_survey_path(survey),
                    class: 'btn btn-primary' %>

        <%= link_to 'View Responses',
                    survey_path(survey),
                    class: 'btn btn-primary' %>
    </div>
</div>