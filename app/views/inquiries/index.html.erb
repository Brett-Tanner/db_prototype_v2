<main id="inquiry_index">
   <%= link_to t('.create_inquiry'),
               new_inquiry_path,
               class: 'btn btn-primary' %>

    <%= paginate @inquiries, window: 20 unless current_user.admin? %>

    <% if current_user.admin? %>
        <nav class="d-flex flex-row flex-wrap justify-content-center gap-3">
            <% @schools.each do |school| %>
                <%= link_to inquiries_path(school: school.id) do %>
                    <div class="card<%= ' bg-primary text-white fw-semibold' if school.id == @school.id %>">
                        <%= school.name %>
                    </div>
                <% end %>
            <% end %>
        </nav>
    <% end %>

    <%= render 'inquiries/inquiry_table' %>

    <%= paginate @inquiries, window: 20 unless current_user.admin? %>

</main>