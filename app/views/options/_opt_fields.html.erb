<div class="fields_wrapper d-grid gap-3 justify-content-center" data-new-record="<%= f.object.new_record? %>">
    <%= f.hidden_field :optionable_id %>
    <%= f.hidden_field :optionable_type %>

    <% unless f.object.new_record? %>
        <div class="form-check">
            <%= f.check_box :_destroy, class: 'form-check-input' %>
            <%= f.label :_destroy, t('.destroy'), class: 'form-check-label' %>
        </div>
    <% end %>

    <%= button_tag 'Remove Option', data: { action: "fields#remove" }, class: 'btn btn-danger' if f.object.new_record? %>
</div>