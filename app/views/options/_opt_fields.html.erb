<div class="fields_wrapper d-grid gap-3" data-new-record="<%= f.object.new_record? %>">
    <%= f.hidden_field :optionable_id %>
    <%= f.hidden_field :optionable_type %>
    <%= f.hidden_field :id %>

    <div class="form-floating">
        <%= f.text_field :name, class: 'form-control', placeholder: "Name", required: true %>
        <%= f.label :name, "Name", class: 'form-label' %>
    </div>

    <div class="form-floating">
        <%= f.number_field :cost, class: 'form-control', placeholder: "Cost", required: true, max: 50_000 %>
        <%= f.label :cost, "Cost", class: 'form-label' %>
    </div>

    <div>
        <%= f.label :category, "Category", class: 'form-label' %>
        <%= f.select :category, Option.categories.map { |k, v| [k.capitalize, k] } , {}, { class: 'form-select' } %>
    </div>

    <div class="form-floating">
        <%= f.number_field :modifier, class: 'form-control', placeholder: t('.modifier') %>
        <%= f.label :modifier, t('.modifier'), class: 'form-label' %>
    </div>

    <% unless f.object.new_record? %>
        <div class="form-check d-flex justify-content-center gap-3">
            <%= f.check_box :_destroy, class: 'form-check-input' %>
            <%= f.label :_destroy, t('.destroy'), class: 'form-check-label' %>
        </div>
    <% end %>

    <%= button_tag 'Remove Option', data: { action: "fields#remove" }, class: 'btn btn-danger' if f.object.new_record? %>

    <hr class="text-primary opacity-75">
</div>