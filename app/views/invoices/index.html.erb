<main id="invoice_index" class="gap-5">
    <% if @user %>
        <% @user.children.each do |child| %>
            <% next if child.events.empty? %>

            <h1><%= child.name %></h1>     
            <% child.events.order(start_date: :asc).each do |event| %>
                <h2><%= event.name %></h2>

                <%= render partial: 'invoices/invoice', collection: @invoices.select { |invoice| invoice.child_id == child.id && invoice.event_id == event.id }, locals: { show: true, past: false } %>
            <% end %>
        <% end %>
    <% else %>
        <h1><%= @child.name %></h1>     
            <% @child.events.order(start_date: :asc).each do |event| %>
                <h2><%= event.name %></h2>

                <%= render partial: 'invoices/invoice', collection: @invoices.select { |invoice| invoice.child_id == @child.id && invoice.event_id == event.id }, locals: { show: true, past: false } %>
            <% end %>
    <% end %>
</main>