<main id="invoice_show" class="gap-5">
    <% unless @previous_versions.empty? %>
        <h1><%= t('.current_version') %></h1>
    <% end %>

    <%= render @invoice, show: true, past: false %>

    <% unless @previous_versions.empty? %>
        <h1><%= t('.previous_versions') %></h1>

        <%= render partial: 'invoices/invoice', collection: @previous_versions, locals: { show: true, past: true } %>
    <% end %>
</main>